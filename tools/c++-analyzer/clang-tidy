#!/bin/sh

# cppcoreguidelines-pro-type-member-init / hicpp-member-init false positive...

${CLANG_TIDY:=clang-tidy} -checks='*,
-cert-err52-cpp,
-hicpp-no-assembler,
-cert-dcl03-c,
-hicpp-static-assert,
-hicpp-noexcept-move,
-cert-err61-cpp,
